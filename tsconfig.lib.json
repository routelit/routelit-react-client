{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    
    "moduleResolution": "bundler",
    "isolatedModules": true,
    "jsx": "react-jsx",

    "strict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,

    /* Declaration Output Settings */
    "declaration": true,
    "declarationDir": "dist",
    "emitDeclarationOnly": true,
    "outDir": "dist",
    "rootDir": "src"
  },
  "include": [
    "src/client.ts",
    "src/lib.ts",
    "src/types.d.ts",
    "src/core/**/*.ts",
    "src/core/**/*.tsx",
    "src/components/**/*.ts",
    "src/components/**/*.tsx",
    "src/utils/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.test.ts",
    "**/*.test.tsx",
    "src/tests/**/*"
  ]
} 